<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.mindorks.framework.mvvm.com.thresholdsoft.framework.mvvm.ui.main.MainActivity">

    <data>

        <variable
            name="viewModel"
            type="com.thresholdsoft.abn.mvvm.ui.main.MainViewModel" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blue"
        android:orientation="vertical"
        android:padding="16dp">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/home_icons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginTop="@dimen/dimen100dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/home_while_icon" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/home_icons"
                android:layout_marginTop="@dimen/dimen20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Main Edition"
                    android:textSize="12sp"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:drawableRight="@drawable/right_forward_arrow_icon" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Andhra Pradesh"
                    android:textAllCaps="true"
                    android:textSize="12sp"
                    android:drawableRight="@drawable/right_forward_arrow_icon"
                android:layout_marginTop="@dimen/dimen20dp"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Telangana"
                    android:textSize="12sp"
                    android:drawableRight="@drawable/right_forward_arrow_icon"
                    android:textAllCaps="true"
                    android:layout_marginTop="@dimen/dimen20dp"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="KARNATAKA"
                    android:textSize="12sp"
                    android:textAllCaps="true"
                    android:drawableRight="@drawable/right_forward_arrow_icon"
                    android:layout_marginTop="@dimen/dimen20dp"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="Tamil nadu"
                    android:drawableRight="@drawable/right_forward_arrow_icon"
                    android:textAllCaps="true"
                    android:layout_marginTop="@dimen/dimen20dp"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="magazines"
                    android:drawableRight="@drawable/right_forward_arrow_icon"
                    android:textAllCaps="true"
                    android:layout_marginTop="@dimen/dimen20dp"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="match_parent"
                    android:textSize="12sp"
                    android:layout_height="wrap_content"
                    android:text="About us"
                    android:textAllCaps="true"
                    android:layout_marginTop="@dimen/dimen20dp"
                    android:textColor="@color/white" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="Contact us"
                    android:textAllCaps="true"
                    android:layout_marginTop="@dimen/dimen20dp"
                    android:textColor="@color/white" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="Privacy policy"
                    android:textAllCaps="true"
                    android:layout_marginTop="@dimen/dimen20dp"
                    android:textColor="@color/white" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Terms and conditions"
                    android:textAllCaps="true"
                    android:textSize="12sp"
                    android:layout_marginTop="@dimen/dimen20dp"
                    android:textColor="@color/white" />

            </LinearLayout>

        </RelativeLayout>


    </LinearLayout>

</layout>